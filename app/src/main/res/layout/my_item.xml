<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ls_item" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/marker"
        android:layout_width="16dp"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:text="" />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">

         <TextView
             android:id="@+id/tv_name"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="My Product Name"
             android:textAppearance="@style/TextAppearance.AppCompat.Display1"
             tools:text=" " />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
         <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
             android:text="Initial Price:"
        android:textStyle="normal|bold|italic"
        tools:text="" />


         <TextView
             android:id="@+id/tv_initial_price"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="100"
             tools:text="Initial Price:"/>


         </LinearLayout>

         <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         android:layout_alignBaseline="@+id/tv_name"
         android:layout_alignBottom="@+id/tv_name"
         android:layout_toRightOf="@+id/marker"
         android:layout_toEndOf="@+id/marker" />

             <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal|bold|italic"
                 tools:text=""
                 android:id="@+id/tv_price_note" />

             <TextView
        android:id="@+id/tv_max_bid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_toEndOf="@+id/tv_initial_price"
        android:layout_toRightOf="@+id/tv_initial_price"
        android:layout_weight="1"
                 android:text="250"
                  />
         </LinearLayout>

     </LinearLayout>
</LinearLayout>